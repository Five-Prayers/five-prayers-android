<resources>

    <style name="Theme.App" parent="Theme.App.Starting">
    </style>

    <!-- Splash screen -->
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- Set the splash screen background, animated icon, and animation duration. -->
        <item name="windowSplashScreenBackground">@color/white</item>

        <!-- Use windowSplashScreenAnimatedIcon to add either a drawable or an
             animated drawable. One of these is required. -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/animated_launcher</item>
        <!-- Required for animated icons -->
        <item name="windowSplashScreenAnimationDuration">3000</item>

        <!-- Set the theme of the Activity that directly follows your splash screen. -->
        <!-- Required -->
        <item name="postSplashScreenTheme">@style/BlueWhiteTheme</item>
    </style>

    <!-- Default blue white theme -->
    <style name="BlueWhiteTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/dodger_blue</item>
        <item name="colorAccent">@color/dodger_blue</item>

        <item name="textColorPrimary">@color/mine_shaft</item>
        <item name="textColorSecondary">@color/gray</item>

        <item name="android:textColorPrimary">@color/mine_shaft</item>
        <item name="android:textColorSecondary">@color/gray</item>
        <item name="android:textColorTertiary">@color/gray</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:editTextColor">@color/gray</item>

        <!-- Background colors -->
        <item name="mainBackgroundStartColor">@color/white</item>
        <item name="mainBackgroundEndColor">@color/alabaster</item>
        <item name="navigationBackgroundStartColor">@color/alabaster</item>
        <item name="navigationBackgroundEndColor">@color/wild_sand</item>
        <item name="navigationCheckedColor">@color/dodger_blue</item>
        <item name="navigationUnCheckedColor">@color/boulder</item>

        <!-- Progressbar colors -->
        <item name="progressbarBackgroundColor">@color/wild_sand</item>
        <item name="progressbarColor">@color/spray</item>
        <item name="progressbarStartColor">@color/bondi_blue</item>
        <item name="progressbarEndColor">@color/dodger_blue</item>
        <item name="progressbarMainTextColor">@color/curious_blue</item>

        <!-- Notification icons colors -->
        <item name="notificationEnabledIconColor">@color/jade</item>
        <item name="notificationDisabledIconColor">@color/amaranth</item>

        <!-- Tooltip appearance -->
        <item name="tooltipBackgroundColor">@color/dodger_blue</item>
        <item name="tooltipTextColor">@color/alabaster</item>

        <!-- toolbar appearance -->
        <item name="toolbarBackgroundColor">@color/dodger_blue</item>
        <item name="toolbarTextColorPrimary">@color/alabaster</item>
        <item name="toolbarTextColorSecondary">@color/iron</item>
        <item name="toolbarTabBackground">@drawable/tab_color_selector</item>

        <item name="alertDialogTheme">@style/AlertDialogTheme</item>
        <item name="android:textViewStyle">@style/RobotoTextViewStyle</item>
        <item name="buttonStyle">@style/RobotoButtonStyle</item>

        <!-- Main icons colors -->
        <item name="iconsMainColor">@color/dodger_blue</item>

        <!-- Checkbox colors -->
        <item name="colorControlActivated">@color/spray</item>
        <item name="colorControlNormal">@color/gray</item>

        <!-- Clock colors -->
        <item name="faceTint">@color/dodger_blue</item>
        <item name="hourTint">@color/curious_blue</item>
        <item name="minuteTint">@color/curious_blue</item>
        <item name="secondTint">@color/curious_blue</item>
    </style>


    <!-- Dark theme -->
    <style name="DarkOrangeTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/cold_gray</item>
        <item name="colorAccent">@color/orange</item>

        <item name="textColorPrimary">@color/alabaster</item>
        <item name="textColorSecondary">@color/gray</item>

        <item name="android:textColorPrimary">@color/alabaster</item>
        <item name="android:textColorSecondary">@color/gray</item>
        <item name="android:textColorTertiary">@color/gray</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:editTextColor">@color/gray</item>


        <!-- Background colors -->
        <item name="mainBackgroundStartColor">@color/cold_gray</item>
        <item name="mainBackgroundEndColor">@color/cold_gray</item>
        <item name="navigationBackgroundStartColor">@color/mine_shaft</item>
        <item name="navigationBackgroundEndColor">@color/mine_shaft_light</item>
        <item name="navigationCheckedColor">@color/orange</item>
        <item name="navigationUnCheckedColor">@color/gray</item>

        <!-- Progressbar colors -->
        <item name="progressbarBackgroundColor">@color/mine_shaft_light</item>
        <item name="progressbarColor">@color/orange</item>
        <item name="progressbarStartColor">@color/scarlet</item>
        <item name="progressbarEndColor">@color/blaze_orange</item>
        <item name="progressbarMainTextColor">@color/scarlet</item>

        <item name="colorSecondary">@color/orange</item>

        <!-- Tooltip appearance -->
        <item name="tooltipBackgroundColor">@color/orange</item>
        <item name="tooltipTextColor">@color/mine_shaft</item>

        <!-- toolbar appearance -->
        <item name="toolbarBackgroundColor">@color/mine_shaft</item>
        <item name="toolbarTextColorPrimary">@color/alabaster</item>
        <item name="toolbarTextColorSecondary">@color/gray</item>
        <item name="toolbarTabBackground">@drawable/tab_color_selector_dark_orange</item>

        <item name="alertDialogTheme">@style/AlertDialogTheme</item>
        <item name="android:textViewStyle">@style/RobotoTextViewStyle</item>
        <item name="buttonStyle">@style/RobotoButtonStyle</item>

        <!-- Notification icons colors -->
        <item name="notificationEnabledIconColor">@color/blaze_orange</item>
        <item name="notificationDisabledIconColor">@color/tundora</item>

        <!-- Main icons colors -->
        <item name="iconsMainColor">@color/orange</item>

        <!-- Checkbox colors -->
        <item name="colorControlActivated">@color/orange</item>
        <item name="colorControlNormal">@color/gray</item>

        <!-- Clock colors -->
        <item name="faceTint">@color/orange</item>
        <item name="hourTint">@color/blaze_orange</item>
        <item name="minuteTint">@color/blaze_orange</item>
        <item name="secondTint">@color/blaze_orange</item>
    </style>

    <style name="DarkTurquoiseTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/mirage</item>
        <item name="colorPrimaryDark">@color/port_gore</item>
        <item name="colorAccent">@color/turquoise_blue</item>

        <item name="textColorPrimary">@color/alabaster</item>
        <item name="textColorSecondary">@color/silver</item>

        <item name="android:textColorPrimary">@color/alabaster</item>
        <item name="android:textColorSecondary">@color/silver</item>
        <item name="android:textColorTertiary">@color/silver</item>
        <item name="android:textColorHint">@color/silver</item>
        <item name="android:editTextColor">@color/silver</item>

        <!-- Background colors -->
        <item name="mainBackgroundStartColor">@color/port_gore</item>
        <item name="mainBackgroundEndColor">@color/port_gore</item>
        <item name="navigationBackgroundStartColor">@color/rhino</item>
        <item name="navigationBackgroundEndColor">@color/rhino_light</item>
        <item name="navigationCheckedColor">@color/turquoise_blue</item>
        <item name="navigationUnCheckedColor">@color/silver</item>

        <!-- Progressbar colors -->
        <item name="progressbarBackgroundColor">@color/rhino_light</item>
        <item name="progressbarColor">@color/turquoise_blue</item>
        <item name="progressbarStartColor">@color/keppel</item>
        <item name="progressbarEndColor">@color/aquamarine_blue</item>
        <item name="progressbarMainTextColor">@color/keppel</item>

        <item name="colorSecondary">@color/turquoise_blue</item>

        <!-- Tooltip appearance -->
        <item name="tooltipBackgroundColor">@color/turquoise_blue</item>
        <item name="tooltipTextColor">@color/rhino</item>

        <!-- toolbar appearance -->
        <item name="toolbarBackgroundColor">@color/rhino</item>
        <item name="toolbarTextColorPrimary">@color/alabaster</item>
        <item name="toolbarTextColorSecondary">@color/silver</item>
        <item name="toolbarTabBackground">@drawable/tab_color_selector_dark_turquoise</item>

        <item name="alertDialogTheme">@style/AlertDialogTheme</item>
        <item name="android:textViewStyle">@style/RobotoTextViewStyle</item>
        <item name="buttonStyle">@style/RobotoButtonStyle</item>

        <!-- Notification icons colors -->
        <item name="notificationEnabledIconColor">@color/keppel</item>
        <item name="notificationDisabledIconColor">@color/boulder</item>

        <!-- Main icons colors -->
        <item name="iconsMainColor">@color/turquoise_blue</item>

        <!-- Checkbox colors -->
        <item name="colorControlActivated">@color/turquoise_blue</item>
        <item name="colorControlNormal">@color/silver</item>

        <!-- Clock colors -->
        <item name="faceTint">@color/turquoise_blue</item>
        <item name="hourTint">@color/keppel</item>
        <item name="minuteTint">@color/keppel</item>
        <item name="secondTint">@color/keppel</item>
    </style>

    <!-- Tab layout appearance -->
    <style name="FivePrayerTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabGravity">fill</item>
        <item name="tabMaxWidth">0dp</item>
        <item name="tabBackground">?attr/toolbarTabBackground</item>
        <item name="tabSelectedTextColor">?attr/toolbarTextColorPrimary</item>
        <item name="tabTextColor">?attr/toolbarTextColorSecondary</item>
    </style>

    <style name="Theme.AppCompat.DayNight.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="RobotoTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="RobotoButtonStyle" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="AlertDialogTheme" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="android:windowTitleStyle">@style/WindowTitleStyle</item>
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:textColor">?attr/textColorSecondary</item>
        <item name="textColorAlertDialogListItem">?attr/textColorPrimary</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:colorBackground">?attr/navigationBackgroundStartColor</item>

        <item name="android:editTextPreferenceStyle">@style/myStyle</item>

    </style>

    <style name="myStyle" parent="Preference.DialogPreference.EditTextPreference">
        <item name="colorPrimary">?attr/textColorSecondary</item>
        <item name="colorPrimaryDark">?attr/textColorSecondary</item>
        <item name="textFillColor">?attr/textColorSecondary</item>
        <item name="android:editTextColor">?attr/textColorSecondary</item>
        <item name="android:textColorHint">?attr/textColorSecondary</item>
        <item name="android:textColor">?attr/colorAccent</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">?attr/colorAccent</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">?attr/colorAccent</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NeutralButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">?attr/colorAccent</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="WindowTitleStyle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">?attr/textColorPrimary</item>
    </style>
</resources>
