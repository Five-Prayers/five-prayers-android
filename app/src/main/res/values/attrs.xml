<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="mainStyles">

        <attr name="colorPrimary" format="color" />
        <attr name="colorPrimaryDark" format="color" />
        <attr name="colorAccent" format="color" />

        <attr name="textColorPrimary" format="color" />
        <attr name="textColorSecondary" format="color" />

        <attr name="mainBackgroundStartColor" format="color" />
        <attr name="mainBackgroundEndColor" format="color" />

        <attr name="navigationBackgroundStartColor" format="color" />
        <attr name="navigationBackgroundEndColor" format="color" />

        <attr name="navigationCheckedColor" format="color" />
        <attr name="navigationUnCheckedColor" format="color" />

        <attr name="progressbarBackgroundColor" format="color" />
        <attr name="progressbarColor" format="color" />
        <attr name="progressbarMainTextColor" format="color" />

        <attr name="notificationEnabledIconColor" format="color" />
        <attr name="notificationDisabledIconColor" format="color" />

        <attr name="iconsMainColor" format="color" />
    </declare-styleable>

    <declare-styleable name="tooltipStyle">
        <attr name="tooltipBackgroundColor" format="color" />
        <attr name="tooltipTextColor" format="color" />
    </declare-styleable>

    <declare-styleable name="toolbarStyle">
        <attr name="toolbarBackgroundColor" format="color" />
        <attr name="toolbarTextColorPrimary" format="color" />
        <attr name="toolbarTextColorSecondary" format="color" />
        <attr name="toolbarTabBackground" format="reference" />
    </declare-styleable>

    <declare-styleable name="SimpleAnalogClock">
        <attr name="faceDrawable" format="reference" />
        <attr name="hourDrawable" format="reference" />
        <attr name="minuteDrawable" format="reference" />
        <attr name="secondDrawable" format="reference" />

        <attr name="faceTint" format="color" />
        <attr name="hourTint" format="color" />
        <attr name="minuteTint" format="color" />
        <attr name="secondTint" format="color" />

        <attr name="hourRotation" format="float" />
        <attr name="minuteRotation" format="float" />
        <attr name="secondRotation" format="float" />
    </declare-styleable>

    <declare-styleable name="ExtraRingtonePreference">
        <attr name="extraRingtones" format="reference" />
        <attr name="extraRingtoneTitles" format="reference" />
    </declare-styleable>
</resources>