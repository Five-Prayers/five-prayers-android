                android:gravity="center"
                android:shadowColor="#000000"
                android:shadowDx="1.5"
                android:shadowDy="1.5"
                android:shadowRadius="1.5"
                android:textColor="@color/black_squeeze"
                android:textSize="@dimen/text_middle"
                tools:text="000" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/maghrib_title_text_View"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:gravity="center"
                android:shadowColor="#000000"
                android:shadowDx="1.5"
                android:shadowDy="1.5"
                android:shadowRadius="1.5"
                android:textColor="@color/black_squeeze"
                android:textSize="@dimen/text_middle"
                tools:text="@string/SHORT_MAGHRIB" />

            <TextView
                android:id="@+id/maghrib_text_View"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:gravity="center"
                android:shadowColor="#000000"
                android:shadowDx="1.5"
                android:shadowDy="1.5"
                android:shadowRadius="1.5"
                android:textColor="@color/black_squeeze"
                android:textSize="@dimen/text_middle"
                tools:text="000" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ichaa_title_text_View"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:gravity="center"
                android:shadowColor="#000000"
                android:shadowDx="1.5"
                android:shadowDy="1.5"
                android:shadowRadius="1.5"
                android:textColor="@color/black_squeeze"
                android:textSize="@dimen/text_middle"
                tools:text="@string/SHORT_ICHA" />

            <TextView
                android:id="@+id/ichaa_text_View"
