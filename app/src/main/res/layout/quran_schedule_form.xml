<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollFeed"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/navigationBackgroundStartColor"
    android:focusableInTouchMode="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ui.quran.index.QuranScheduleIndexFragment"
    tools:showIn="@layout/activity_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="16dp"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/start_date_label_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:gravity="left"
            android:maxLines="1"
            android:text="@string/common.startdate"
            android:textColor="?attr/textColorSecondary"
            android:textSize="@dimen/text_large" />

        <TextView
            android:id="@+id/start_date_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:fontFamily="sans-serif-condensed"
            android:maxLines="1"
            android:textColor="?attr/textColorPrimary"
            android:textSize="@dimen/text_smlarge" />

        <TextView
            android:id="@+id/reading_goal_label_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif-condensed"
            android:gravity="left"
            android:maxLines="1"
            android:text="@string/reciting_frequency"
            android:textColor="?attr/textColorSecondary"
            android:textSize="@dimen/text_large" />

        <Spinner
            android:id="@+id/reading_goal_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/notification_time_label_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:layout_marginTop="8dp"
            android:maxLines="1"
            android:text="@string/notification_time"
            android:textColor="?attr/textColorSecondary"
            android:textSize="@dimen/text_large" />

        <TextView
            android:id="@+id/notification_time_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:fontFamily="sans-serif-condensed"
            android:maxLines="1"
            android:textColor="?attr/textColorPrimary"
            android:textSize="@dimen/text_smlarge" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/dialog_ok_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/button"
                android:text="@string/common.ok"
                android:textColor="?attr/textColorPrimary" />
        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>