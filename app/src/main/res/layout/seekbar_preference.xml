<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/mainBackgroundStartColor"
    android:padding="8dp"
    android:orientation="vertical">

    <TextView
        android:id="@android:id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_xxlarge"
        android:layout_marginLeft="@dimen/spacing_xxlarge"
        android:fontFamily="sans-serif-medium"
        android:paddingStart="8dp"
        android:paddingLeft="8dp"
        android:paddingTop="8dp"
        android:paddingEnd="8dp"
        android:paddingRight="8dp"
        android:textColor="?attr/textColorPrimary"
        android:textSize="14sp"
        android:textStyle="normal"
        tools:text="Sending usage data" />

    <TextView
        android:id="@android:id/summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_xxlarge"
        android:layout_marginLeft="@dimen/spacing_xxlarge"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="3sp"
        android:paddingStart="8dp"
        android:paddingLeft="8dp"
        android:paddingEnd="8dp"
        android:paddingRight="8dp"
        android:textColor="@color/preference_summary_state_color"
        android:textSize="@dimen/text_middle"
        android:textStyle="normal"
        tools:ignore="SmallSp"
        tools:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industryâ€™s." />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <SeekBar
            android:id="@+id/seekbar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_xxlarge"
            android:layout_marginLeft="@dimen/spacing_xxlarge"
            android:layout_weight="1"
            android:clickable="false"
            android:focusable="false"
            android:paddingBottom="8dp"
            android:paddingStart="8dp"
            android:paddingLeft="8dp"
            android:paddingTop="8dp"
            android:paddingEnd="8dp"
            android:paddingRight="8dp" />

        <TextView
            android:id="@+id/seekbar_value"
            android:layout_width="@dimen/preference_seekbar_value_minWidth"
            android:layout_height="match_parent"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            android:ellipsize="marquee"
            android:fadingEdge="horizontal"
            android:fontFamily="sans-serif"
            android:gravity="right|center_vertical"
            android:lineSpacingExtra="3sp"
            android:singleLine="true"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/preference_summary_state_color"
            android:textSize="@dimen/text_middle"
            android:textStyle="normal"
            tools:ignore="SmallSp" />

    </LinearLayout>

</LinearLayout>
